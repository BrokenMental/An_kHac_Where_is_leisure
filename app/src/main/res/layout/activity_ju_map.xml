<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    tools:context=".JU_MapActivity">

    <TextView
        android:id="@+id/txt_day"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/map_next"
        android:layout_marginTop="74dp"
        android:text="여행 일차"
        android:textAlignment="center"
        android:textSize="25dp" />

    <Button
        android:id="@+id/map_pre"
        android:layout_width="63dp"
        android:layout_height="43dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:background="#6EABBE"
        android:textColor="#FFFFFF"
        android:text="이전" />

    <Button
        android:id="@+id/map_next"
        android:layout_width="342dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#6EABBE"
        android:text="다음"
        android:textColor="#FFFFFF" />

    <LinearLayout
        android:id="@+id/linearLayoutTmap"
        android:layout_width="match_parent"
        android:layout_height="494dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="116dp"
        android:orientation="vertical">

    </LinearLayout>

    <Spinner
        android:id="@+id/sp_day"
        android:layout_width="222dp"
        android:layout_height="36dp"
        android:layout_alignEnd="@+id/map_pre"
        android:layout_alignTop="@+id/txt_day"
        android:entries="@array/sp_Day"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/logo" />

</RelativeLayout>