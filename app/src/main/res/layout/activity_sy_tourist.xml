<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SY_TouristActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgLogo"
                    android:layout_width="160dp"
                    android:layout_height="55dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"
                    android:background="#6EAABE"
                    app:srcCompat="@drawable/logo" />

                <Button
                    android:id="@+id/btnBack"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="이전"
                    android:textColor="#6EAABE"
                    android:textStyle="bold"></Button>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:gravity="top|left"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/txtSelectTour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/imgLogo"
                    android:layout_weight="1"
                    android:text="관광지 선택"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtLocal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/txtSelectTour"
                    android:layout_weight="1"
                    android:text="제주특별시 제주공항 주변" />
            </LinearLayout>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="453dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/chkBtn1"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:onClick="Popup1"
                        android:text="사라오름" />
                    1

                    <CheckBox
                        android:id="@+id/chkBtn2"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:onClick="Popup2"
                        android:text="넥슨 컴퓨터 박물관" />

                    <CheckBox
                        android:id="@+id/chkBtn3"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:onClick="Popup3"
                        android:text="성산일출봉" />

                    <CheckBox
                        android:id="@+id/chkBtn4"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:onClick="Popup4"
                        android:text="정방폭포" />

                    <CheckBox
                        android:id="@+id/chkBtn5"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:onClick="Popup5"
                        android:text="러브랜드" />

                    <CheckBox
                        android:id="@+id/chkBtn6"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:onClick="Popup6"
                        android:text="최남단 체험 감귤농장" />

                    <CheckBox
                        android:id="@+id/chkBtn7"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:onClick="Popup7"
                        android:text="소인국 테마파크" />

                    <CheckBox
                        android:id="@+id/chkBtn8"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:onClick="Popup8"
                        android:text="휴애리 생활자연 공원" />

                </LinearLayout>
            </ScrollView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnOk"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#6EAABE "
                    android:text="다음"
                    android:textSize="18sp"
                    android:onClick="btnOk" />
            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>